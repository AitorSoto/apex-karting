---
import Layout from '../../layouts/Layout.astro';
import drivers from '../../../public/data/drivers.json';
import teams from '../../../public/data/teams.json';
import results from '../../../public/data/results.json';
import qualifying from '../../../public/data/qualifying.json';

const driversWithStats = drivers.map((driver: any) => {
  const team = teams.find((t: any) => t.id === driver.teamId);
  const driverResults = results.filter((r: any) => r.driverId === driver.id);
  const driverQualifying = qualifying.filter((q: any) => q.driverId === driver.id);
  const totalPoints = driverResults.reduce((sum: number, r: any) => sum + r.points, 0);
  const wins = driverResults.filter((r: any) => r.position === 1).length;
  const poles = driverQualifying.filter((q: any) => q.position === 1 && !q.dnf).length;
  
  return { ...driver, team, totalPoints, wins, poles };
});

const driversByTeam = teams.map((team: any) => ({
  team,
  drivers: driversWithStats.filter((d: any) => d.teamId === team.id)
}));
---

<Layout title="Pilotos - Apex Karting">
  <style>
    .driver-card:hover {
      border-color: var(--team-color) !important;
    }
    .driver-card:hover .driver-name {
      color: var(--team-color);
    }
    .driver-card:hover .driver-number {
      color: var(--team-color);
      opacity: 1;
    }
    .driver-33-easter:hover .easter-egg-message {
      opacity: 1;
    }
    .easter-egg-message {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: linear-gradient(135deg, #00352F 0%, #00594F 100%);
      padding: 1.5rem 2.5rem;
      border-radius: 0.5rem;
      border: 2px solid #00D9B1;
      box-shadow: 0 0 30px rgba(0, 217, 177, 0.3);
      font-size: 1.5rem;
      font-weight: 900;
      color: #00D9B1;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      z-index: 10;
      opacity: 0;
      transition: opacity 0.3s;
      pointer-events: none;
      text-align: center;
    }
  </style>
  <h1 class="text-3xl md:text-5xl font-black mb-6 md:mb-8 text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-red-300">
    PILOTOS
  </h1>

  {driversByTeam.map(({ team, drivers }: any) => (
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-4 border-l-4 pl-4" style={`border-color: ${team.color}; color: ${team.color}`}>
        {team.name}
      </h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
        {drivers.map((driver: any) => (
          <a 
            href={`/drivers/${driver.id}`} 
            class={`driver-card bg-zinc-900 rounded-lg overflow-hidden border-2 border-zinc-800 transition-all group ${driver.number === 33 ? 'driver-33-easter' : ''}`}
            style={`--team-color: ${driver.team?.color}`}
            data-driver-number={driver.number}
          >
            <div class="h-64 flex items-center justify-center relative overflow-hidden" style={`background: linear-gradient(135deg, ${driver.team?.color}15 0%, ${driver.team?.color}30 100%)`} transition:name={driver.image ? `driver-image-${driver.id}` : `driver-number-${driver.id}`}>
              {driver.image ? (
                <img src={driver.image} alt={driver.name} class="w-full h-full object-cover" style={`object-position: ${driver.imagePosition || 'top'}`} />
              ) : (
                <div class="driver-number text-8xl font-black text-zinc-700 transition-colors">
                  {driver.number}
                </div>
              )}
              {driver.number === 33 && (
                <div class="easter-egg-message">
                  Como 33? Repiteme ese numer√≠n
                </div>
              )}
            </div>
            <div class="p-6">
              <h3 class="driver-name text-2xl font-bold mb-2 transition-colors" transition:name={`driver-name-${driver.id}`}>{driver.name}</h3>
              <div class="flex items-center gap-2 mb-4">
                <span class="w-3 h-3 rounded" style={`background-color: ${driver.team?.color}`}></span>
                <span class="text-sm text-zinc-400">{driver.team?.name}</span>
              </div>
              <div class="flex justify-between text-sm">
                <div>
                  <div class="text-zinc-400">Puntos</div>
                  <div class="font-bold text-xl">{driver.totalPoints}</div>
                </div>
                <div>
                  <div class="text-zinc-400">Victorias</div>
                  <div class="font-bold text-xl">{driver.wins}</div>
                </div>
                <div>
                  <div class="text-zinc-400">Poles</div>
                  <div class="font-bold text-xl">{driver.poles}</div>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  ))}
</Layout>
