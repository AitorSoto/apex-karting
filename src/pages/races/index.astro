---
import Layout from '../../layouts/Layout.astro';
import races from '../../../public/data/races.json';
import circuits from '../../../public/data/circuits.json';

const racesWithCircuits = races.map((race: any) => {
  const circuit = circuits.find((c: any) => c.id === race.circuitId);
  return { ...race, circuit };
});
---

<Layout title="Carreras - Apex Karting">
  <h1 class="text-3xl md:text-5xl font-black mb-6 md:mb-8 text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-red-300">
    CALENDARIO DE CARRERAS
  </h1>

  <div class="space-y-4 md:space-y-6">
    {racesWithCircuits.map((race: any) => (
      <a href={`/races/${race.id}`} class={`block bg-zinc-900 rounded-lg overflow-hidden border-2 hover:border-red-600 transition-all group ${race.status === 'completed' ? 'border-green-900' : 'border-zinc-800'}`}>
        <!-- Mobile Layout -->
        <div class="md:hidden p-4">
          <div class="flex items-start gap-4 mb-3">
            <div class="w-14 h-14 rounded-full bg-red-600 flex items-center justify-center flex-shrink-0 text-2xl font-black" transition:name={`race-round-${race.id}`}>
              {race.round}
            </div>
            <div class="flex-1 min-w-0">
              <h2 class="text-lg font-bold group-hover:text-red-500 transition-colors mb-1 line-clamp-2" transition:name={`race-name-${race.id}`}>{race.name}</h2>
              <span class={`inline-block px-2 py-1 rounded text-xs font-bold uppercase ${race.status === 'completed' ? 'bg-green-600' : 'bg-red-600'}`}>
                {race.status === 'completed' ? 'Completada' : 'Próxima'}
              </span>
            </div>
          </div>
          <div class="space-y-1 text-sm">
            <div class="text-zinc-400">{race.circuit.name}</div>
            <div class="text-zinc-500">{race.circuit.location}</div>
            <div class="text-zinc-500">{race.date}</div>
            <div class="flex gap-4 text-zinc-400 mt-2">
              <span>{typeof race.circuit.length === 'number' ? `${race.circuit.length}km` : race.circuit.length}</span>
              <span>•</span>
              <span>{race.circuit.turns} curvas</span>
            </div>
          </div>
        </div>
        
        <!-- Desktop Layout -->
        <div class="hidden md:flex items-center p-6">
          <div class="w-20 h-20 rounded-full bg-red-600 flex items-center justify-center mr-6 text-3xl font-black flex-shrink-0" transition:name={`race-round-${race.id}`}>
            {race.round}
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-3 mb-2 flex-wrap">
              <h2 class="text-2xl font-bold group-hover:text-red-500 transition-colors" transition:name={`race-name-${race.id}`}>{race.name}</h2>
              <span class={`px-3 py-1 rounded text-xs font-bold uppercase ${race.status === 'completed' ? 'bg-green-600' : 'bg-red-600'}`}>
                {race.status === 'completed' ? 'Completada' : 'Próxima'}
              </span>
            </div>
            <div class="text-zinc-400 mb-2">{race.circuit.name} • {race.circuit.location}</div>
            <div class="text-sm text-zinc-500">{race.date}</div>
          </div>
          <div class="text-right text-zinc-400 flex-shrink-0">
            <div class="text-sm mb-1">Longitud: {typeof race.circuit.length === 'number' ? `${race.circuit.length}km` : race.circuit.length}</div>
            <div class="text-sm">Curvas: {race.circuit.turns}</div>
          </div>
        </div>
      </a>
    ))}
  </div>
</Layout>
