---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import 'flag-icons/css/flag-icons.min.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'Campeonato Apex Karting', image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = image ? new URL(image, Astro.site).href : undefined;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {socialImage && <meta property="og:image" content={socialImage} />}
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {socialImage && <meta property="twitter:image" content={socialImage} />}
    
    <ClientRouter />
  </head>
  <body class="bg-zinc-950 text-white min-h-screen">
    <nav class="bg-gradient-to-r from-red-600 via-red-700 to-red-800 border-b-4 border-red-500 shadow-xl" transition:persist>
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl md:text-3xl font-black tracking-wider">
            <span class="text-white">APEX</span>
            <span class="text-red-300">KARTING</span>
          </a>
          
          <!-- Mobile menu button -->
          <button id="mobile-menu-btn" class="md:hidden text-white focus:outline-none">
            <svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <line x1="4" y1="6" x2="20" y2="6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="4" y1="12" x2="20" y2="12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="4" y1="18" x2="20" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          
          <!-- Desktop menu -->
          <div class="hidden md:flex gap-6">
            <a href="/" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Inicio</a>
            <a href="/standings" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Clasificación general</a>
            <a href="/qualifying" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Qualys</a>
            <a href="/drivers" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Pilotos</a>
            <a href="/teams" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Equipos</a>
            <a href="/races" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Carreras</a>
            <!-- <a href="/admin" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Admin</a> -->
          </div>
        </div>
        
        <!-- Mobile menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2 flex flex-col gap-3 overflow-hidden transition-all duration-300 ease-in-out max-h-0 opacity-0">
          <a href="/" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Inicio</a>
          <a href="/standings" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Clasificación general</a>
          <a href="/qualifying" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Qualys</a>
          <a href="/drivers" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Pilotos</a>
          <a href="/teams" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Equipos</a>
          <a href="/races" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Carreras</a>
          <!-- <a href="/admin" class="text-white hover:text-red-300 font-bold transition-colors uppercase text-sm">Admin</a> -->
        </div>
      </div>
    </nav>
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-zinc-900 border-t-2 border-red-600 mt-16">
      <div class="container mx-auto px-4 py-6 text-center text-zinc-400">
        <p class="text-sm">&copy; 2025 Campeonato Apex Karting. Todos los derechos reservados.</p>
      </div>
    </footer>
    
    <script>
      import '../components/Menu.ts';
    </script>
  </body>
</html>
